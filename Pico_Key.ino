      rowActv[i] = 0;
    }
  }

  // Write Digital Row Pin according to rowState
  digitalWrite(ROW_1, LOW);
  digitalWrite(ROW_2, LOW);
  digitalWrite(ROW_3, LOW);
  if(rowActv[0]) {
    digitalWrite(ROW_1, HIGH);
  } else if(rowActv[1]) {
    digitalWrite(ROW_2, HIGH);
  } else if(rowActv[2]) {
    digitalWrite(ROW_3, HIGH);
  }

  if(iteration >= X_KEY - 1) {
    iteration = 0;
  } else {
    iteration++;
  }
}


