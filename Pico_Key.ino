        rotaryEncoder.setEncoderValue(250);
      }

      prevEncVal = rotaryEncoder.readEncoder();
    }
    if (rotaryEncoder.isEncoderButtonClicked()) {
      bleKeyboard.end();
      rotary_onButtonClick();
    }
  }
}

